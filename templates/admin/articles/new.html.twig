{% extends 'admin/partials/base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.imageFile) }}
                {{ form_row(form.content) }}
                {{ form_row(form.tags) }}
                <button type="submit" class="btn btn-color">Enregistrer le nouvel article</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
    <script>
        $('select').select2();
    </script>
    <script src="{{ asset('js/filetype-field.js') }}"></script>
{% endblock %}
