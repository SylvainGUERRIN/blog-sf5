{% extends 'admin/partials/base.html.twig' %}
{% block title %} Gestion des categories {% endblock %}
{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="{{ path('categorie_create') }}" class="btn btn-color btn-lg">Ajouter une nouvelle catégorie</a>
            </div>
        </div>
        <div class="row mt-5 mb-5">
            {% if categories is not empty %}
                {% for categorie in categories %}
                    <div class="col-sm-12 col-md-4 display-card">
                        <div class="card bg-light mb-3">
                            <div class="card-header text-center">
                                <h1>{{ categorie.name }}</h1>
                            </div>
                            <div class="card-body text-center">
                                {% if categorie.description is not null %}
                                    <p class="card-text">{{ categorie.description }}</p>
                                {% else %}
                                    <p>Cette catégorie n'a pas de description</p>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <a href="{{ path('categorie_edit', {'slug': categorie.slug}) }}" class="btn btn-color">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('categorie_delete', {'slug': categorie.slug}) }}" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12 text-center mt-5 mb-5">
                    <h2>Encore aucunes catégories de crées</h2>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
