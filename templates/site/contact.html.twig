{% extends 'site/partials/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.6.0/leaflet.css"/>
{% endblock %}

{% block body %}
    <div class="header text-center">
        <h1 class="text-white">Me Contacter</h1>
    </div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div id="mapid"></div>
        </div>
        <div class="col-sm-12 col-md-6">
            <h1 class="text-center mb-3">Formulaire de contact</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.mail) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.message) }}
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-color">Envoyer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row mt-5 mb-5">
        <div class="col-12 text-center mb-3">
            <h1>Mes coordonn√©es</h1>
        </div>
        <div class="col-sm-12 col-md-3 text-center">
            <img src="assets/icones/address-marker-64px.png" alt="icone marker">
            <p>Les hauts de saint Martin 47390 Layrac</p>
        </div>
        <div class="col-sm-12 col-md-3 text-center">
            <a href="tel:0643152243" class="coord-icon"><img src="assets/icones/smartphone-64px.png" alt="icone smartphone"></a>
            <a href="tel:0643152243"><p class="coord-icon">06 43 15 22 43</p></a>
        </div>
        <div class="col-sm-12 col-md-3 text-center">
            <a href="mailto:sguerrin549@gmail.com" class="coord-icon"><img src="assets/icones/mail-64px.png" alt="icone email"></a>
            <a href="mailto:sguerrin549@gmail.com"><p class="coord-icon">sguerrin549@gmail.com</p></a>
        </div>
        <div class="col-sm-12 col-md-3 text-center">
            <img src="assets/icones/icone-siren-blanc-64px.png" alt="icone numero entreprise">
            <p class="">Numero siret: 477 902 738 000 20</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.6.0/leaflet.js"></script>
    <script src="{{ asset('js/map-contact.js') }}"></script>
{% endblock %}
